<!DOCTYPE html>
<html lang="en">
<head>
<title>GreenFace</title>
<script type="text/javascript" src="PortedClasses/FPGraphics.js"></script>
<script type="text/javascript" src="PortedClasses/FPPlatform.js"></script>
<script type="text/javascript" src="PortedClasses/FPMovablePlatform.js"></script>
<script type="text/javascript" src="PortedClasses/FPPlayer.js"></script>
<script type="text/javascript" src="PortedClasses/FPDiamond.js"></script>
<script type="text/javascript" src="PortedClasses/FPExit.js"></script>
<script type="text/javascript" src="PortedClasses/FPElevator.js"></script>
<script type="text/javascript" src="PortedClasses/FPTrampoline.js"></script>
<script type="text/javascript" src="PortedClasses/FPMagnet.js"></script>
<script type="text/javascript" src="PortedClasses/GFSoldier.js"></script>
<script type="text/javascript" src="PortedClasses/FPSpeedPowerUp.js"></script>
<script type="text/javascript" src="PortedClasses/FPGame.js"></script>
<script type="text/javascript" src="PortedClasses/Preview.js"></script>
<script type="text/javascript">
  window.onload = init;

  function init()
  {
      <% @levels.each do |level| %>
        drawPreview("<%= level[:title] %>.xml", "canvas<%= level[:id] %>");
      <% end %>
  }
</script>
<style type="text/css">
h1 { text-align: center; }
body { font-family: Arial, Helvetica, sans-serif; background-color:#EEE; }
div { float: left; margin: 10px; }
form { margin: 5px; }
</style>
</head>
<body>
  <h1>GreenFace</h1>
  <form name="input" action="/leveleditor" method="get">
  Level name: <input type="text" name="level" />
  <input type="submit" value="Create new level" />
  </form>
  <% @levels.each do |level| %>
  <div>
    <h2><%= level[:title] %></h2>
    <canvas id="canvas<%= level[:id] %>" width="480" height="320"></canvas>
    <br></br>
    <a href="/game.html?level=<%= level[:title] %>.xml" onclick="windowOpener(480, 295, 'Game Simulation', this.href); return false">Play</a>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <a href="/leveleditor.html?level=<%= level[:title] %>.xml">Edit</a>
  </div>
  <% end %>
</body>
</html>